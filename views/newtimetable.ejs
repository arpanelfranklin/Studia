    <!-- Timetable -->
    <div class="max-w-5xl mx-auto py-10">
        <h1 class="text-3xl font-bold text-center mb-8 text-gray-800">Weekly Timetable</h1>

        <% var days={}; (results || []).forEach(function(r) { if (!days[r.day_of_week]) { days[r.day_of_week]=[]; }
            days[r.day_of_week].push(r); }); var
            weekDays=["Monday","Tuesday","Wednesday","Thursday","Friday","Saturday","Sunday"]; %>

            <% weekDays.forEach(function(day) { %>
                <div class="mb-10">
                    <h2 class="text-xl font-semibold mb-4 text-gray-700">
                        <%= day %>
                    </h2>

                    <% if (days[day] && days[day].length> 0) { %>
                        <div class="space-y-4">
                            <% days[day].forEach(function(r) { %>
                                <div
                                    class="bg-white rounded-xl p-5 flex items-center justify-between hover-lift card-shadow transition-shadow">
                                    <div class="flex items-center space-x-4">
                                        <div
                                            class="w-12 h-12 coral-teal-gradient rounded-lg flex items-center justify-center text-white font-bold text-lg">
                                            <%= r.subject_name.charAt(0) %>
                                        </div>
                                        <div>
                                            <h3 class="text-lg font-semibold text-gray-800">
                                                <%= r.subject_name %>
                                            </h3>
                                            <p class="text-sm text-gray-500">
                                                <%= r.faculty_name %>
                                            </p>
                                        </div>
                                    </div>
                                    <div class="text-right text-sm text-gray-600 space-x-4">
                                        <span class="font-medium">
                                            <%= r.start_time.slice(0,5) %> - <%= r.end_time.slice(0,5) %>
                                        </span>
                                        <span class="font-medium">
                                            <%= r.classroom %>
                                        </span>
                                        <span
                                            class="px-2 py-1 rounded text-xs font-medium 
                                        <%= r.type==='T' ? 'coral-gradient text-white' : r.type==='L' ? 'teal-gradient text-white' : 'bg-gray-200 text-gray-700' %>">
                                            <%= r.type==='T' ? 'Tutorial' : r.type==='L' ? 'Lecture' : r.type %>
                                        </span>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                        <% } else { %>
                            <p class="text-gray-500 italic">No classes scheduled.</p>
                            <% } %>
                </div>
                <% }) %>

