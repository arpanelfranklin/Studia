                                <label for="dayOfWeek" class="block text-sm font-medium text-slate-700 mb-2">Day of
                                    Week</label>

                                <select id="dayOfWeek" name="day_of_week"
                                    class="w-full px-4 py-3 border border-slate-200 rounded-lg focus:outline-none input-focus transition-all duration-200"
                                    required>
                                    <option value="">Select Day</option>
                                    <option value="monday">Monday</option>
                                    <option value="tuesday">Tuesday</option>
                                    <option value="wednesday">Wednesday</option>
                                    <option value="thursday">Thursday</option>
                                    <option value="friday">Friday</option>
                                </select>
                            </div>

                            <!-- Subject -->
                            <div>
                                <label for="subject"
                                    class="block text-sm font-medium text-slate-700 mb-2">Subject</label>
                                <input type="text" id="subject" name="subject_name" placeholder="e.g., Data Structures"
                                    list="subjectSuggestions"
                                    class="w-full px-4 py-3 border border-slate-200 rounded-lg focus:outline-none input-focus transition-all duration-200"
                                    required>
                                <datalist id="subjectSuggestions">
                                    <option value="Data Structures">
                                    <option value="Database Management">
                                    <option value="Operating Systems">
                                    <option value="Computer Networks">
                                    <option value="Machine Learning">
                                    <option value="Software Engineering">
                                    <option value="Algorithms">
                                    <option value="Computer Graphics">
                                    <option value="Artificial Intelligence">
                                    <option value="Web Development">
                                </datalist>
                            </div>

                            <!-- Start Time -->
                            <div>
                                <label for="startTime" class="block text-sm font-medium text-slate-700 mb-2">Start
                                    Time</label>
                                <input type="time" id="startTime" name="start_time"
                                    class="w-full px-4 py-3 border border-slate-200 rounded-lg focus:outline-none input-focus transition-all duration-200"
                                    required>
                            </div>

                            <!-- End Time -->
                            <div>
                                <label for="endTime" class="block text-sm font-medium text-slate-700 mb-2">End
                                    Time</label>
                                <input type="time" id="endTime" name="end_time"
                                    class="w-full px-4 py-3 border border-slate-200 rounded-lg focus:outline-none input-focus transition-all duration-200"
                                    required>
                            </div>

                            <!-- Classroom -->
                            <div>
                                <label for="classroom"
                                    class="block text-sm font-medium text-slate-700 mb-2">Classroom</label>
                                <select id="classroom" name="classroom"
                                    class="w-full px-4 py-3 border border-slate-200 rounded-lg focus:outline-none input-focus transition-all duration-200"
                                    required>
                                    <option value="">Select Classroom</option>
                                    <option value="A-LH 201">A-LH 201 (Lecture Hall)</option>
                                    <option value="A-LH 202">A-LH 202 (Lecture Hall)</option>
                                    <option value="B-CR 105">B-CR 105 (Classroom)</option>
                                    <option value="B-CR 106">B-CR 106 (Classroom)</option>
                                    <option value="C-LAB 301">C-LAB 301 (Computer Lab)</option>
                                    <option value="C-LAB 302">C-LAB 302 (Computer Lab)</option>
                                    <option value="C-LAB 303">C-LAB 303 (Computer Lab)</option>
                                    <option value="A-TR 201">A-TR 201 (Tutorial Room)</option>
                                    <option value="A-TR 202">A-TR 202 (Tutorial Room)</option>
                                    <option value="A-SR 401">A-SR 401 (Seminar Room)</option>
                                </select>
                            </div>

                            <!-- Faculty Name -->
                            <div>
                                <label for="facultyName" class="block text-sm font-medium text-slate-700 mb-2">Faculty
                                    Name</label>
                                <input type="text" id="facultyName" name="faculty_name" value="Prof. Dr. Johnson"
                                    class="w-full px-4 py-3 border border-slate-200 rounded-lg focus:outline-none input-focus transition-all duration-200"
                                    required>
                            </div>
                            <!-- Faculty ID -->
                            <div>
                                <label for="facultyID" class="block text-sm font-medium text-slate-700 mb-2">Faculty
                                    ID</label>
                                <input type="text" id="facultyID" name="faculty_id" value="FAC0001"
                                    class="w-full px-4 py-3 border border-slate-200 rounded-lg focus:outline-none input-focus transition-all duration-200"
                                    required>
                            </div>

                            <!-- Type -->
                            <div>
                                <label for="type" class="block text-sm font-medium text-slate-700 mb-2">Type</label>
                                <select id="type" name="type"
                                    class="w-full px-4 py-3 border border-slate-200 rounded-lg focus:outline-none input-focus transition-all duration-200"
                                    required>
                                    <option value="">Select Type</option>
                                    <option value="L">Lecture (L)</option>
                                    <option value="T">Tutorial (T)</option>
                                    <option value="P">Practical (P)</option>
                                </select>
                            </div>


                            <button type="submit"
                                class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
                                Add Timetable Entry
                            </button>
                        </form>
                    </div>



                </div>
            </div>
            <!-- Right Column -->
            <!-- Timetable Entries in Card Style -->
            <div class="space-y-6">
                <div class="dashboard-card card-shadow hover-lift fade-in">
                    <h3 class="text-xl font-bold text-gray-800 mb-6">Today's Schedule</h3>
                    <div class="space-y-3">
                        <% result.forEach(row=> { %>
                            <div class="schedule-item bg-blue-50">
                                <div class="flex items-center space-x-3">
                                    <!-- Dot color can depend on type -->
                                    <div class="w-3 h-3 
                            <% if(row.type === 'Lecture'){ %> bg-blue-500 <% } else if(row.type === 'Lab'){ %> bg-green-500 <% } else { %> bg-orange-500 <% } %> 
                            rounded-full"></div>

                                    <!-- Subject + Room + Faculty -->
                                    <div class="flex-1">
                                        <div class="font-medium text-gray-800">
                                            <%= row.subject_name %>
                                        </div>
                                        <div class="text-sm text-gray-600">
                                            Room: <%= row.classroom %> • Faculty: <%= row.faculty_name %>
                                        </div>
                                    </div>

                                    <!-- Start - End Time -->
                                    <div class="text-sm text-gray-600">
                                        <%= row.start_time %> - <%= row.end_time %>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>
            </div>


</body>

</html>