                                            <p class="text-sm text-gray-600">
                                                <%= leave.leave_type %> Leave
                                            </p>
                                            <p class="text-xs text-gray-500">From: <%=
                                                    leave.fromDate.toISOString().split("T")[0] %>
                                                    to <%= leave.toDate.toISOString().split("T")[0] %>
                                            </p>
                                        </div>
                                        <div class="flex space-x-2">
                                            <button onclick="updateLeaveStatus(<%= leave.leave_id %>, 'approve')"
                                                class="bg-green-500 text-white px-3 py-1 rounded text-sm hover:bg-green-600">Approve</button>
                                            <button onclick="updateLeaveStatus(<%= leave.leave_id %>, 'reject')"
                                                class="bg-red-500 text-white px-3 py-1 rounded text-sm hover:bg-red-600">Reject</button>
                                        </div>
                                    </div>
                                    <p class="text-sm text-gray-700">Reason: <%= leave.reason %>
                                    </p>
                                </div>
                                <% }) %>
                                    <% } else { %>
                                        <p class="text-gray-600">No pending leave requests.</p>
                                        <% } %>
                    </div>
                </div>
            </div>

            <script>
                function updateLeaveStatus(leaveId, action) {
                    fetch(`/leaves/${leaveId}/${action}`, { method: "POST" })
                        .then(res => res.json())
                        .then(data => {
                            if (data.success) {
                                document.getElementById(`leave-${leaveId}`).remove();
                                alert(`Leave ${data.status}`);
                            }
                        })
                        .catch(err => console.error(err));
                }
            </script>

