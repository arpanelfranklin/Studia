                    <div class="space-y-4 max-h-96 overflow-y-auto">
                        <% if (leaves.length> 0) { %>
                            <% leaves.forEach(leave=> { %>
                                <div class="border border-gray-200 rounded-lg p-4" id="leave-<%= leave.leave_id %>">
                                    <div class="flex justify-between items-start mb-2">
